             <div class="row">
              <div class="col col-md-12 col-sm-12">
                <el-dialog title="编辑图片" size='small' :visible.sync="dialogVisible">
                 <el-row :gutter='20'>
                   <el-col :span='12' v-for='items in photoList' style='padding:20px' v-loading='imgLoading'>
