<script>
import BigImg from '../../components/BigImg.vue'
	export default{
       data(){
       	return{
       		id:'',
       		version:'',
       		billNo:'',
       		data:[],
          loading:false,
          showImg:false,
          brief:'',
          picIndex:0,
          imgSrc:''
       	}
       },
         components:{
        BigImg
       },
       methods:{
       	getData(){
       		let self=this;
              var url='';
          if(this.brief){
             url= '/dingtalk/bill/view/init/'+this.version+'/'+this.id+'?brief=brief'
          }
          else{
            url= '/dingtalk/bill/view/init/'+this.version+'/'+this.id
            }
       		this.$http.get(url)
       		.then(res=>{
       			console.log(res);
                 if(res.data.code=='000000'){
                     self.data=res.data.data;
                     console.log(self.data)
                     if(self.data.ocrStatus=="inOCR"){
                         self.loading=true
                     }
                     else if(self.data.ocrStatus=="fail"){
                      self.$router.push({path:'/ticks'});
                     }
                     else{
                          self.loading=false
                     }
                     self.billNo=res.data.data.billNo;
                 }
       		})
       	},
          getItem(val,oldVal){
            this.picIndex=val;
        },
         clickImg(){
          let self=this;
                this.showImg = true;
                // 获取当前图片地址
                    if(self.data.ocrStatus=="inOCR"||self.data.ocrStatus=="fail"){
                         self.loading=false
                     }
                     else{
                          self.loading=true
                     }
                this.imgSrc = self.data.hostUrl+self.data.photoList[self.picIndex].picUrl;
            },
            viewImg(){
                this.showImg = false;
                  this.loading=true
            },
        divNum(num){
          Array.prototype.remove=function(obj){ //删除数组元素
          for(var i =0;i <this.length;i++){ 
             var temp = this[i]; 
           if(!isNaN(obj)){ 
             temp=i; 
             } 
             if(temp == obj){ 
              for(var j = i;j <this.length;j++){ 
                this[j]=this[j+1]; 
                   } 
             this.length = this.length-1; 
              } 
             } 
             } 
              num= this.returnFloat(Number(num));//转化为两位小数
            var arr=String(num).split('');
             arr.reverse();
             arr.remove(2);
            arr.reverse();//删除数组中的小数点
           if(arr.length<12){
          for(var i=arr.length;i<11;i++){
            arr.unshift("");
          }
         }//扩展数组长度

         return arr
        },
                    back(){
             this.$router.push({path:'/ticks'})
            },
        returnFloat(value){//保留两位小数
         var value=Math.round(parseFloat(value)*100)/100;
        var xsd=value.toString().split(".");
         if(xsd.length==1){
         value=value.toString()+".00";
            return value;
          }
          if(xsd.length>1){
        if(xsd[1].length<2){
         value=value.toString()+"0";
           }
          return value;
         }
          }
       },
       mounted(){
       	this.id=this.$route.query.id;
       	this.version=this.$route.query.version;
       	this.billNo=this.$route.query.billNo;
        this.brief=this.$route.query.brief;
       	this.getData();
   
	   }
	}
</script>
