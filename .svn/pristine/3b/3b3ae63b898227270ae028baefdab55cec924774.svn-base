<script>
import {checkNum16} from '../../lib/util.js'
import {dateFormat} from'../../lib/tools'
  export default {
    data() {
      return {
        activeName: 'first',
        billNo:'',
        data:[],
        isRight:true,
        rowHeight:0,
        noresult:false
      };
    },
   computed:{
         
    },
    mounted(){
    this.rowHeight=this.$parent.$data.height
      console.log(this.rowHeight)
    },
    methods: {
      handleClick(tab, event) {
        console.log(tab, event);
      },
        getEnter(e){
      console.log(e)
        if(Number(e.keyCode)==13){
          this.getData();
        }
       },
       dateFormats(strDate){
        if(strDate!=''&&strDate!=null&&strDate!='Invalid Date'){
            return dateFormat(strDate);
          }
          else{
            return ''
          }
       },
      getData(){
        let self=this;
        this.isRight=checkNum16(this.billNo);
        this.data=[];
        if(this.isRight){   
          var params='?billNo='+self.billNo;
        this.$http.get('/dingtalk/tools/notice/list'+params).then(res=>{
           if(res.data.code=='000000'){
            console.log(res);
             self.data=res.data.data
             if(self.data==null||self.data||self.data.length){
              self.noresult=true
             }
             else{
              self.noresult=false
             }
           }

        })}
        else{
           this.isRight=false;
           this.data=[];
        }
      },
      resets(){
        this.billNo=''
        this.isRight=true
      }
    }
  };
</script>